--set-format csv+
--stop-igdata
scan(datetime2) 
--set-format dense
store(build(<a1: int32>[i=0:0,1,0],2),A)  
--set-format dcsv
apply(A, a2, double(a1))  
apply(A, a2, string(a1))  
