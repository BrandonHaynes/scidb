
--setup
--start-query-logging
--start-igdata
--aql create  array T < x: int64 > [ i=1:1001,101,0, j=1:999,99,0 ]
--aql create array E < x: double null > [ i=0:0,1,0 ]
--aql create array R < x: double null > [ i=0:0,1,0 ]
store(filter(build(T,i+j),j-2<i and i<j+2),T)
store(build(E,iif(0=1 ,iif(1001>999, (3.*999*(999+1)-1)/(3*999-1),(3.*1001*(1001+1)-1)/(3*1001-1)), iif(1001>999, (3.*999*(999+1)-1)/(999*1001),(3.*1001*(1001+1)-1)/(1001*999)) )),E)
store(repart(aggregate(T, avg(x)),R),R)
--stop-igdata

--test
--aql SELECT count(*) FROM R , E WHERE abs((R.x-E.x)/iif(E.x=0,1,E.x)) > 1e-07

--cleanup
remove(T)
remove(E)
remove(R)
--stop-query-logging